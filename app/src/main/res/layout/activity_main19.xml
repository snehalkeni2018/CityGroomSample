<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Main8Activity">



    <android.support.design.widget.BottomNavigationView
        android:layout_width="63dp"
        android:layout_height="51dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="1dp"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="457dp"
        app:itemBackground="@color/colorBlack"
        app:itemIconTint="@color/colorWhite"
        app:itemIconSize="45dp"
        app:menu="@menu/menu_icon">

        <android.support.design.widget.NavigationView
            android:layout_width="67dp"
            android:id="@+id/menu"
            android:layout_height="57dp"
            android:background="@drawable/menu"
            app:menu="@menu/menu_items"
            android:layout_gravity="center">
        </android.support.design.widget.NavigationView>

    </android.support.design.widget.BottomNavigationView>

    <View
        android:id="@+id/view3"
        android:layout_width="303dp"
        android:layout_height="54dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="57dp"
        android:layout_marginTop="0dp"
        android:background="@color/colorBlack" />

    <ImageView
        android:id="@+id/imageView20"
        android:layout_width="229dp"
        android:layout_height="48dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="96dp"
        android:layout_marginTop="4dp"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/whitelogo" />

    <TextView
        android:id="@+id/textView13"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="64dp"
        android:layout_marginEnd="112dp"
        android:text="COMPLAINTS"
        android:textSize="17dp"
        android:textColor="@color/colorBlack"
        android:textStyle="bold"/>

    <ImageView
        android:id="@+id/imageView21"
        android:layout_width="48dp"
        android:layout_height="31dp"
        android:layout_alignStart="@+id/imageView20"
        android:layout_alignTop="@+id/textView13"
        android:layout_marginStart="-2dp"
        android:layout_marginTop="-6dp"
        app:srcCompat="@drawable/blackcomplaints" />

    <ImageView
        android:id="@+id/imageView13"
        android:layout_width="75dp"
        android:layout_height="59dp"
        android:layout_alignEnd="@+id/imageView20"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="-5dp"
        android:layout_marginBottom="28dp"
        app:srcCompat="@drawable/cityicon" />


</RelativeLayout>